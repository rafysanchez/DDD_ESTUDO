@model WebSite.Models.ProdutoModel

<h3>@ViewData["Title"]</h3>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />

        <input type="hidden" name="Id" asp-for="Id" />

        <div class="form-group">
            <label asp-for="NomeProduto" class="col-md-2 control-label"> Nome Produto</label>
            <div class="col-md-10">
                <input asp-for="NomeProduto" maxlength="20" class="form-control" />
                @Html.ValidationMessage("NomeProduto", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>

    </div>
</form>